 <html>
    <head>
        <title>Restaurant Finder!</title>
		<link  rel="stylesheet" type="text/css" href="/stylesheets/signup.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		
		
    </head>
    <body>
		<nav class="navbar navbar-default navbar-dark bg-secondary">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Restaurant Finder</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
					
                    <% if(!currentUser){ %>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Sign Up</a></li>
                    <% } else { %>
					<!-- this will later take me to profile page -->
                        <li><a href="#">Signed In As <%= currentUser.username %></a></li>
                        <li><a href="/logout">Logout</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <% if(success && success.length) {%>
    <div>
        <%- include("./partials/flash") %>
    </div>
    <% }%>
<h1>Login!</h1>
<form action="/login" method="POST">
	<div class="container">
		
		
		<label for="username"> Username</label>
		 <input type="text" name="username" placeholder="username" required>
		
		<label for="password">Password</label>
		<input type="password" name="password" placeholder="password">
		
		<div class="clearfix">
		  <button type="submit" class="signupbtn">Log in</button>
		</div>
		<p> If page refreshes after <strong>Log in</strong> button is clicked it means you do not have and account or your login information is wrong</p>
	</div>
	
	
	
	
    
</form>

<%- include("./partials/footer") %>