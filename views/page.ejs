<html>
    <head>
        <title>Restaurant Finder!</title>
		<link  rel="stylesheet" type="text/css" href="/stylesheets/page.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		
    </head>
    <body>
		<nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Restaurant Finder</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
					
                    <% if(!currentUser){ %>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Sign Up</a></li>
                    <% } else { %>
					<!-- this will later take me to profile page -->
                        <li><a href="#">Signed In As <%= currentUser.username %></a></li>
                        <li><a href="/logout">Logout</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
		<div class="topstuff">
			<h1>
	Here are some yummy options for you!
</h1>
		<a href="/user/<%=user._id%>/interests/edit">
	Edit your interest
</a>
			<% user.interests.forEach(function(interests){ %> 


                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= interests.vegan %>    </strong>
							<strong><%= interests.italian %>   </strong>
							<strong><%= interests.fast %>    </strong>
                            <strong>location: <%= interests.location %> </strong>
                        </div>
                    </div>
                
<% }) %>

		</div>



<% values.forEach(function(value){ %>
	<% value.jsonBody.businesses.forEach(function(business){ %> 
		
		
		
	<div class=" dishess" >
 	 <img class ="aimg" src="<%= business.image_url %>" class="card-img-top" alt="...">
	
   		<h5 class="cardtitle"><%= business.name %></h5>
   		 
    	<a href="<%= business.url %>" class="btn btn-primary">Visit their website!</a>
  	
</div>
		
		

	<% }) %>
<% }) %>





